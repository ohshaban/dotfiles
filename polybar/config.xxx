include-file = ~/.config/polybar/colors

[bar/main]
;monitor = eDP1
width = 100%
height = 32
;offset-x = 1%
;offset-y = 1%
;radius = 15.5
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #bf616a

;border-left-size = 13
;border-right-size = 13
;border-top-size = 8
;border-bottom-size = 0
;border-color = #00000000

padding-left = 1
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "MonoLisa-Medium:pixelsize=10;2"
font-1 = "Font Awesome 5 Free:style=Regular:pixelsize=12;3"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=12;3"
font-3 = "Font Awesome 5 Brands:pixelsize=12;3"

modules-left = bspwm xwindow
modules-center = date
modules-right = cpu memory network-wlan battery-internal pulseaudio separator power-menu

tray-position = right
tray-padding = 2
;tray-background = #0063ff

wm-restack = bspwm

override-redirect = false

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

format-underline =
format-background =
format-padding =


[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>

ws-icon-0 = term;ï„ 
ws-icon-1 = web;ï‰©
ws-icon-2 = code;ï„¦
ws-icon-3 = files;ï»
ws-icon-4 = media;ï€ˆ

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.primary}
label-focused-underline= ${colors.primary}
label-focused-padding = 2
label-focused = %icon% %name%

label-occupied = %icon%
label-occupied-foreground = ${colors.primary}
label-occupied-padding = 2

label-urgent = %icon%!
label-urgent-background = ${colors.primary}
label-urgent-padding = 1

label-empty = %icon%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
format-prefix-foreground = ${colors.foreground}
label = %{F#434C5E}ï‹›%{F-} %percentage:2%%

[module/memory]
type = internal/memory
interval = 2"
format-prefix-foreground = ${colors.foreground}
label = %{F#434C5E}ï”¸%{F-} %percentage_used%%

[module/network-wlan]
type = internal/network
interface = wlp1s0

interval = 3.0
accumulate-stats = true
unknown-as-up = true

format-connected = %{F#434C5E}ï‡«%{F-} <label-connected>
format-disconnected = 

format-packetloss = <animation-packetloss> <label-connected>

; All labels support the following tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %local_ip6% [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]

; Default: %ifname% %local_ip%
label-connected =  %essid%
label-connected-foreground = foreground

; Default: (none)
label-disconnected = not connected
label-disconnected-foreground = #66ffffff

; Only applies if <ramp-signal> is used
ramp-signal-0 = ğŸ˜±
ramp-signal-1 = ğŸ˜ 
ramp-signal-2 = ğŸ˜’
ramp-signal-3 = ğŸ˜Š
ramp-signal-4 = ğŸ˜ƒ
ramp-signal-5 = ğŸ˜ˆ

; Only applies if <animation-packetloss> is used
animation-packetloss-0 =%{F#434C5E}ï±%{F-} 
animation-packetloss-0-foreground = #ffa64c
animation-packetloss-1 =%{F#434C5E}ï‡«%{F-} 
animation-packetloss-1-foreground = #000000
; Framerate in milliseconds
animation-packetloss-framerate = 500
;click-right = nm-applet &

[module/battery-internal]
type = internal/battery

full-at = 99

battery = BAT0
adapter = AC

poll-interval = 5

time-format = %H:%M

; Available tags:
;   <label-charging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-charging>
format-charging = <animation-charging> <label-charging>

; Available tags:
;   <label-discharging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-discharging>
format-discharging = <ramp-capacity> <label-discharging>

; Available tags:
;   <label-full> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   format-full = <label-full>

; Available tokens:
;   %percentage% (default) - is set to 100 if full-at is reached
;   %percentage_raw%
;   %time%
;   %consumption% (shows current charge rate in watts)
label-charging = %percentage%%

; Available tokens:
;   %percentage% (default) - is set to 100 if full-at is reached
;   %percentage_raw%
;   %time%
;   %consumption% (shows current discharge rate in watts)
label-discharging = %percentage%%

; Available tokens:
;   %percentage% (default) - is set to 100 if full-at is reached
;   %percentage_raw%
 label-full = %{F#434C5E}ï‰€%{F-} 100%

; Only applies if <ramp-capacity> is used
ramp-capacity-0 =%{F#434C5E}ï‰„%{F-} 
ramp-capacity-1 =%{F#434C5E}ï‰ƒ%{F-} 
ramp-capacity-2 =%{F#434C5E}ï‰‚%{F-} 
ramp-capacity-3 =%{F#434C5E}ï‰%{F-} 
ramp-capacity-4 =%{F#434C5E}ï‰€%{F-} 

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 =%{F#434C5E}ï‰„%{F-} 
animation-charging-1 =%{F#434C5E}ï‰ƒ%{F-} 
animation-charging-2 =%{F#434C5E}ï‰‚%{F-} 
animation-charging-3 =%{F#434C5E}ï‰%{F-} 
animation-charging-4 =%{F#434C5E}ï‰€%{F-} 
; Framerate in milliseconds
animation-charging-framerate = 500

; Only applies if <animation-discharging> is used
animation-discharging-0 =%{F#434C5E}ï‰€%{F-} 
animation-discharging-1 =%{F#434C5E}ï‰%{F-} 
animation-discharging-2 =%{F#434C5E}ï‰‚%{F-} 
animation-discharging-3 =%{F#434C5E}ï‰ƒ%{F-} 
animation-discharging-4 =%{F#434C5E}ï‰„%{F-} 
; Framerate in milliseconds
animation-discharging-framerate = 500

[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
sink = alsa_output.pci-0000_12_00.3.analog-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Interval for volume increase/decrease (in percent points)
; Default: 5
interval = 5

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = <ramp-volume> <label-volume>

; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
;format-muted = <label-muted>

; Available tokens:
;   %percentage% (default)
;   %decibels% (unreleased)
;label-volume = %percentage%%

; Available tokens:
;   %percentage% (default)
;   %decibels% (unreleased)
label-muted = %{F#434C5E}ïš©%{F-} off
;label-muted-foreground = #666

; Only applies if <ramp-volume> is used
ramp-volume-0 =%{F#434C5E}ï€¦%{F-} 
ramp-volume-1 =%{F#434C5E}ï€§%{F-} 
ramp-volume-2 =%{F#434C5E}ï€¨%{F-} 

; Right and Middle click (unreleased)
click-right = pavucontrol &
; click-middle = 

[module/backlight]
type = internal/xbacklight

format = <label>

label = %{F#434C5E}ï‚%{F-} %percentage%%

; XRandR output to get get values from
; Default: the monitor defined for the running bar
; output = HDMI-1

; Create scroll handlers used to set the backlight value
; Default: true
enable-scroll = false

[module/date]
type = internal/date

; Seconds to sleep between updates
interval = 1.0

date = %d-%m-%Y%
time = %H:%M

label = %{F#434C5E}ï„³%{F-} %date% %time%

[module/separator]
type = custom/script
format = <label>
exec = echo "|"

[module/power-menu]
type = custom/menu

; If true, <label-toggle> will be to the left of the menu items (default).
; If false, it will be on the right of all the items.
expand-right = true

; "menu-LEVEL-N" has the same properties as "label-NAME" with
; the additional "exec" property
;
; Available exec commands:
;   menu-open-LEVEL
;   menu-close
; Other commands will be executed using "/bin/sh -c $COMMAND"

menu-0-0 ="|"
menu-0-0-exec =
menu-0-1 ="%{F#434C5E}ïŠ‹%{F-}"
menu-0-1-exec = systemctl suspend 
menu-0-2 = "%{F#434C5E}ïƒ¢%{F-}"
menu-0-2-exec = reboot
menu-0-3 = "%{F#434C5E}ï€‘%{F-}"
menu-0-3-exec = shutdown now
menu-0-4 = "%{F#434C5E}ï€£%{F-}"
menu-0-4-exec = betterlockscreen -l 



; Available tags:
;   <label-toggle> (default) - gets replaced with <label-(open|close)>
;   <menu> (default)
; If expand-right is true, the default will be "<label-toggle><menu>" and the
; other way around otherwise.
; Note that if you use <label-toggle> you must also include
; the definition for <label-open>
format =<menu>  <label-toggle>

label-open = "%{F#434C5E}ï€‘%{F-}"

label-close = "%{F#434C5E}ï%{F-}"

; Optional item separator
; Default: none
label-separator = "  "

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 0

